<Window x:Class="MemoBoost.UI.NCrdWin"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MemoBoost.UI"
        mc:Ignorable="d"
        Title="NCrdWin" Height="300" Width="300">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition Height="30"/>
        </Grid.RowDefinitions>
        <TextBlock Text="Question" Margin="5"/>
        <TextBox Name ="qstnBox" Margin="5 20 5 10"/>
        <TextBlock Grid.Row="1" Text="Answer" Margin="5"/>
        <TextBox Name="answrBox"  Grid.Row="1" Margin="5 20 5 10"/>
        <WrapPanel Grid.Row="2" HorizontalAlignment="Right" Margin="5">
            <ComboBox Name="decksCBox" Width="150" DisplayMemberPath="Name" />
            <Button Content="Add"  Width="70" Margin="10 0 0 0"></Button>
        </WrapPanel>
    </Grid>
</Window>
