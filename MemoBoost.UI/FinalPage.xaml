<Page x:Class="MemoBoost.UI.FinalPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:MemoBoost.UI"
      mc:Ignorable="d" 
      d:DesignHeight="260" d:DesignWidth="390"
      Title="FinalPage">

    <Grid>
        <StackPanel Margin="15" HorizontalAlignment="Center" VerticalAlignment="Top">
            <TextBlock FontSize="16" TextWrapping="Wrap" Text="{Binding Path=Name, StringFormat='At the time there are no cards to study in the {0} deck.'}"/>
            <TextBlock FontSize="15"  TextWrapping="Wrap" HorizontalAlignment="Center" Name="infoBlock"/>
        </StackPanel>
    </Grid>
</Page>
